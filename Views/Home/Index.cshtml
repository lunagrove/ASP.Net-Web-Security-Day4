    ViewData["Title"] = "Home Page";
}

<div class="container">
    
    <div class="home-page">
        <div class="home-text">
            <h4>Welcome to Deck Master!</h4>
            <p>We specialise in providing high-quality decks of cards for all your
                gaming and card collecting needs. Our online store offers a wide variety
