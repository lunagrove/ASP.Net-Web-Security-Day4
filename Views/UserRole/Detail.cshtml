@model IEnumerable<Day3Paypal.ViewModels.RoleVM>

@{
    ViewData["Title"] = "Detail";
}

@if (ViewBag.UserName != "")
{
    <h3>@ViewBag.UserName</h3>
    <h4>@ViewBag.FullName</h4>
}

<p class="action-link">
    @Html.ActionLink("Assign Roles", "Create",
                     new { userName = @ViewBag.UserName })
</p> 

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                </tr>
        }
    </tbody>
</table>

<p class="action-link">
    @Html.ActionLink("Back to Users", "Index",
    new { userName = @ViewBag.UserName })
</p>
